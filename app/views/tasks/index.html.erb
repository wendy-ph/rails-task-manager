<h1>My Tasks</h1>

<ul>
<% @tasks.each do |task| %>
  <li><%= check_box_tag 'completed', task.completed?, task.completed? %><%= link_to task.title, task_path(task)%> <%= link_to '🗑️',
                                                    task_path(task),
                                                    method: :delete,
                                                    data: { confirm: "Are you sure?"}  %></li>
<% end %>
</ul>

<%= link_to '+ Add a new task', new_task_path %>
