<h1>My Tasks</h1>

<ul>
<% @tasks.each do |task| %>
  <li><% if task.completed? %>
        <i class="fa-solid fa-square-check"></i>
      <% else %>
        <i class="fa-solid fa-square"></i>
      <% end %>
  <%= link_to task.title, task_path(task)%> <%= link_to '🗑️',
                                                    task_path(task),
                                                    method: :delete,
                                                    data: { confirm: "Are you sure?"}  %></li>
<% end %>
</ul>

<div class="border-top"><%= link_to '+ Add a new task', new_task_path, class: "btn btn-primary mt-3" %></div>
