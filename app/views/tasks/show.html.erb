<h1><%= @task.title %></h1>
<div class="border border-2 rounded bg-light p-3 mb-3"><%= @task.details %></div>
<p><%= @task.completed? ? 'Completed' : 'Not Completed' %></p>

<%= link_to 'edit task', edit_task_path(@task), class: "btn btn-warning" %>
<%= link_to 'back', tasks_path, class: "btn btn-primary" %>
