<h1>Edit task</h1>

<%= form_for(@task) do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.label :details %>
  <%= f.text_field :details %>
  <%= f.label :completed %>
  <%= check_box_tag 'completed', @task.completed?, @task.completed? %>
  <%= f.submit %>
<% end %>

<%= link_to 'Back to list', tasks_path %>
